<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

  		<div class ="caution">
        <% if @errors_list %>
          <% if @errors_list.errors.any? %>
            <%= @errors_list.errors.count %>件のerrorが発生しました。<br>
            <% @errors_list.errors.full_messages.each do |error| %>
              <%= error %><br>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <br>

      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, id:"book_title" %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label><br>
          <%= f.text_area :body, id:"book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book!', class:"btn btn-success" %>
        </div>
        <% end %>
  		<%= link_to "Show", book_path(@book.id) %> |
  		<%= link_to "Back", books_path %>
  </div>
</div>
      </div>